{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/destination-csv-from-json.json",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "destinations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "filter": {
            "type": "object",
            "description": "Optional filter criteria to specify which files to process",
            "properties": {
              "bucketName": {
                "description": "Optional. If specified, only process files in the corresponding bucket",
                "type": "string"
              },
              "pathPrefix": {
                "description": "Optional. If specified, only process files with matching prefix",
                "type": "string"
              }
            }
          },
          "mappingId": {
            "type": "string"
          },
          "mappingValidation": {
            "type": "string",
            "enum": [
              "strict"
            ]
          },
          "parserConfig": {
            "type": "object",
            "description": "Optional parser configurations. See https://www.papaparse.com/docs#config",
            "properties": {
              "header": {
                "type": "boolean",
                "default": true
              },
              "delimiter": {
                "type": "string",
                "default": ","
              },
              "newline": {
                "type": "string",
                "default": "\r\n"
              }
            }
          },
          "destination": {
            "oneOf": [
              {
                "$ref": "./destination-as2.json"
              },
              {
                "$ref": "./destination-bucket.json"
              },
              {
                "$ref": "./destination-function.json"
              },
              {
                "$ref": "./destination-sftp.json"
              },
              {
                "$ref": "./destination-stash.json"
              },
              {
                "$ref": "./destination-webhook.json"
              }
            ]
          }
        },
        "required": [
          "destination"
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "destinations"
  ]
}